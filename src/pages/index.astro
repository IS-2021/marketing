---
import Layout from '../layouts/Layout.astro';
import { businessInfo, heroFeatures } from '../data/business';
---

<Layout title="Strona główna">
  <div class="bg-rose-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="font-serif text-4xl md:text-5xl text-gray-900 mb-6">
            {businessInfo.slogan}
          </h1>
          <p class="text-lg text-gray-600 mb-8">
            {businessInfo.description}
          </p>
          <a 
            href="/kontakt" 
            class="inline-block bg-rose-600 text-white px-8 py-3 rounded-lg hover:bg-rose-700 transition-colors"
          >
            Umów wizytę
          </a>
        </div>
        <div class="relative aspect-[4/3]">
          <img 
            src="https://images.unsplash.com/photo-1616394584738-fc6e612e71b9?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
            alt="Salon piękności" 
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
      </div>
    </div>
  </div>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="font-serif text-3xl text-center mb-12">Dlaczego my?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {heroFeatures.map(feature => (
        <div class="text-center p-6 bg-white rounded-lg shadow-sm">
          <h3 class="font-serif text-xl mb-4">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <img 
            src="https://plus.unsplash.com/premium_photo-1661339062807-25d71bad284f?q=80&w=2938&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
            alt="Zabiegi kosmetyczne" 
            class="rounded-lg shadow-lg"
          />
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="font-serif text-3xl mb-6">Profesjonalne zabiegi kosmetyczne</h2>
          <p class="text-gray-600 mb-8">
            Oferujemy szeroki zakres zabiegów kosmetycznych, wykonywanych przez doświadczonych specjalistów. 
            Używamy najwyższej jakości kosmetyków i nowoczesnego sprzętu, aby zapewnić najlepsze rezultaty.
          </p>
          <a 
            href="/uslugi" 
            class="inline-block bg-rose-600 text-white px-8 py-3 rounded-lg hover:bg-rose-700 transition-colors"
          >
            Zobacz nasze usługi
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

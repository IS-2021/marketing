---
import Layout from '../layouts/Layout.astro';
import { businessInfo } from '../data/business';
---

<Layout title="Kontakt">
  <div class="bg-rose-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="font-serif text-4xl text-center text-gray-900">Kontakt</h1>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="space-y-8">
        <div>
          <h2 class="font-serif text-2xl mb-4">Dane kontaktowe</h2>
          <div class="space-y-2 text-lg">
            <p>
              <span class="font-medium">Adres:</span><br />
              {businessInfo.contact.address.street}<br />
              {businessInfo.contact.address.postcode} {businessInfo.contact.address.city}
            </p>
            <p>
              <span class="font-medium">Telefon:</span><br />
              <a href={`tel:${businessInfo.contact.phone}`} class="text-rose-600 hover:text-rose-700">
                {businessInfo.contact.phone}
              </a>
            </p>
            <p>
              <span class="font-medium">Email:</span><br />
              <a href={`mailto:${businessInfo.contact.email}`} class="text-rose-600 hover:text-rose-700">
                {businessInfo.contact.email}
              </a>
            </p>
          </div>
        </div>

        <div>
          <h2 class="font-serif text-2xl mb-4">Godziny otwarcia</h2>
          <div class="space-y-2">
            {businessInfo.openingHours.map(({ day, hours }) => (
              <div class="flex justify-between">
                <span class="font-medium">{day}</span>
                <span>{hours}</span>
              </div>
            ))}
          </div>
        </div>

        <div>
          <h2 class="font-serif text-2xl mb-4">Media społecznościowe</h2>
          <div class="flex space-x-4">
            <a
              href={businessInfo.socialMedia.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="text-rose-600 hover:text-rose-700"
            >
              Facebook
            </a>
            <a
              href={businessInfo.socialMedia.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-rose-600 hover:text-rose-700"
            >
              Instagram
            </a>
          </div>
        </div>
      </div>

      <div class="h-[600px] rounded-lg overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d39518.777011785096!2d19.46428888183117!3d51.75272126669847!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471a34c8b1f327ff%3A0x43e4e6ebd97e3460!2sClinic%20of%20Cosmetic%20Essence%20of%20Beauty!5e0!3m2!1sen!2spl!4v1731850379502!5m2!1sen!2spl"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </div>
</Layout> 